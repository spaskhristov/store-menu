<Window x:Class="RestaurantOrderingSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Aventurine - Restaurant Ordering System"
        WindowState="Maximized"
        WindowStyle="None">
    <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid Background="#FFD2F3C2" Height="50" HorizontalAlignment="Stretch">
            <TextBlock
                Language="bg-bg"
                Text="Restaurant AVENTURINE"
                TextAlignment="Center"
        		FontWeight="Bold"
        		FontSize="20"
                Margin="0,10,0,0" />
        </Grid>
        <Grid Background="AliceBlue" Height="50" HorizontalAlignment="Stretch">
            <Button Content="New Order" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Height="30"/>
            <Button Content="Orders" HorizontalAlignment="Left" Margin="90,10,0,0" VerticalAlignment="Top" Width="75" Height="30"/>
            <Button Content="Clients" HorizontalAlignment="Left" Margin="170,10,0,0" VerticalAlignment="Top" Width="75" Height="30"/>
            <Button Content="Log Off" HorizontalAlignment="Right" Margin="0,10,11.6,0" VerticalAlignment="Top" Width="75" Height="30" Click="Button_Click_1"/>
        </Grid>
    </StackPanel>
</Window>
